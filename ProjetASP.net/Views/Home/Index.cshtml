@{
    ViewBag.Title = "Home Page";
}

<section>
            
            <section class="home section" id="home">
                <div class="shapeX shape__big"></div>
                <div class="shapeX shape__small"></div>


                <div class="home__container container grid">
                    <div class="home__data">
                        <h1 class="home__title">
                            Pick Your Best Car
                        </h1>
                        <h2 class="home__subtitle">
                            Ferrari 458
                        </h2>
                        <h3 class="home__elec">
                            <i class="ri-flashlight-fill"></i>
                            RELENTLESS FORCE
                        </h3>
                    </div>

                    <img src="~/Style/Images/home5.png" alt="" class="home__img">
                    <div class="home__car">
                        <div class="home__car-data">
                            <div class="home__car-icon">
                                <i class="ri-temp-cold-line"></i>
                            </div>
                            <h2 class="home__car-number">3.0s</h2>
                            <h3 class="home__car-name">0-100 km/h</h3>

                        </div>

                        <div class="home__car-data">
                            <div class="home__car-icon">
                                <i class="ri-dashboard-2-line"></i>
                            </div>
                            <h2 class="home__car-number">419</h2>
                            <h3 class="home__car-name">POWER (KW)</h3>

                        </div>
                        <div class="home__car-data">
                            <div class="home__car-icon">
                                <i class="ri-flashlight-fill"></i>
                            </div>
                            <h2 class="home__car-number">325 km/h</h2>
                            <h3 class="home__car-name">MAX. SPEED</h3>

                        </div>

                    </div>




                </div>

            </section>

            <section class="gallery section">
                <div class="gallery__container container grid">
                    <video class="video__slide active" src="~/Style/Videos/vid_1.mp4" autoplay muted loop></video>
                    <video class="video__slide" src="~/Style/Videos/vid_4.mp4" autoplay muted loop></video>
                    <video class="video__slide" src="~/Style/Videos/vid_3.mp4" autoplay muted loop></video>
                    <video class="video__slide" src="~/Style/Videos/vid_2.mp4" autoplay muted loop></video>
                    <video class="video__slide" src="~/Style/Videos/vid_5.mp4" autoplay muted loop></video>

                </div>

            </section>
</section>

<section>
    <div class="s2 container">
        <div class="row justify-content-center">
            <div class="col-md-12 ">
                <h2 class="section__title"> Offre Spéciales</h2>

            </div>
        </div>
        <div class="row">

            @if (Model != null)
            {
                foreach (ProjetASP.net.Models.Voiture_info item in Model)
                {
                    <div class="col-md-3">
                        @Html.Partial("_VoitureCard", item)
                    </div>
                }
            }
            else
            {
                <h3>vide</h3>
            }


        </div>
    </div>
</section>

<section class="offer section">

    <div class="offer__container container grid">

        <img src="~/Style/Images/offer-bg.png" alt="" class="offer__bg">

        <div class="offer__data">
            <h2 class="section__title offer__title">
                Do You Want To Receive More <br> Special Offers?
            </h2>

            <p class="offer__description">
                Be the first to receive all the information about our
                products and new cars by email by subscribing to our
                mailing list.
            </p>
           
            <div class="button">@Html.ActionLink("créer compte", "SignUp", "Login", new { role = "Locataire" }, htmlAttributes: new { @class = "btn" })</div>
        </div>

        <img src="~/Style/Images/offer.png" alt="" class="offer__img">

    </div>

</section>