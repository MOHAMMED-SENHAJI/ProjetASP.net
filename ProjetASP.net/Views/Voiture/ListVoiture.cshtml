
@model IEnumerable<ProjetASP.net.Models.Voiture_info>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="ListVoiture">
    
    <div class="banner">
        <div class="container content">
            <h2> list de tous les voiture </h2>

                    <form action="/Voiture/ListVoiture" method="post">
                        <div class="input-group" style="margin-left:90px; ">

                            <input name="TextRecherche" placeholder="" type="text" class="form-control form-search" aria-label="Text input with dropdown button">
                            <select name="RecherchePar" class="custom-select form-search" style="margin-top:45px;">

                                <option value="Nom" selected>Nom de voiture</option>
                                <option value="Marque">Marque</option>
                                <option value="Couleur">Couleur</option>
                                <option value="Annee">Année</option>
                                <option value="Km">Km</option>
                                <option value="Proprietaire">Nom de propriétaire </option>
                            </select>
                            <div class="input-group-append" style="margin-top: 15px; padding:0px;">
                                <button class="btn clrsgn form-search" type="submit">
                                    <span class="Nan-icon">
                                        <i class="bi bi-search"></i>
                                    </span>
                                </button>
                            </div>

                        </div>
                    </form>
                </div>

            </div>
</section>

<br />

<section>
    <div class="container">

        <br />
        <div class="row justify-content-start">
            @if (Model != null)
            {
                foreach (ProjetASP.net.Models.Voiture_info item in Model)
                {
                    <div class=" col-md-3">
                        @Html.Partial("_VoitureCard", item)
                    </div>
                }
            }
            else
            {
                <h3>vide</h3>
            }

        </div>
    </div>
</section>

