
@{
    ViewBag.Title = "Reserver";
    Layout = "~/Views/Shared/_Layout.cshtml";
    User u = ViewBag.user;
    Voiture v = ViewBag.voiture;

}
@if (Model)
{
    <div class="alert alert-success fade show" role="alert">
        Votre réservation est  <strong>validé</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


<div class="center-Card" style="background:url('../../Content/Images/Global/signin2.jpg') bottom no-repeat ; background-size:cover ">
    <div class="card-item" style="width: 70%;">
        <div class="row row-space">
            <div class="col-md-12">

                <div class="row row-space">
                    <div class="col-lg-3">
                        <div class="reserv-Item-img"
                             style="width: 100%; height: 120px; border-radius: 1rem ; width : 236px; height: 250px; background: url('../../Content/Images/Voiture/@v.Image.Trim()') center no-repeat; background-size: cover; ">
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <br />
                        <h5 style="position:relative ;left:80px"> @v.Nom </h5>
                        <p style="position:relative;left:80px">@v.Prix <small>dhs/jour</small></p>
                    </div>
                </div>
                <div class="row row-space">
                    <div class="col-lg-12">
                        <h1>Reservation</h1>
                    </div>
                </div>
                <div class="row row-space">
                    <div class="col-lg-12">
                        <form method="post" action=@Url.Action("Reserver","Voiture")>
                            <div >

                                <div class="col-lg-6">
                                    <label for="Name" style="font-size:20px ; font-weight:bold ; color:white">Votre Nom  </label>
                                    <input type="text" name="nom" class="form-control vh " value="@u.Name"  style="width: 800px; height: 50px; margin-bottom: 30px; background-color: #3d1b69; color:white" />

                                </div>
                                <div class="col-lg-6">
                                    <label for="Price"  style="font-size:20px ; font-weight:bold ; color:white">Email </label>
                                    <input type="email" name="email" class="form-control" value="@u.Email"  style="width: 800px; height: 50px; margin-bottom: 30px; background-color: #3d1b69; color: white " />

                                </div>

                            </div>
                            <div >

                                <div class="col-lg-6">
                                    <label for="Name "style="font-size:20px ; font-weight:bold ; color:white">Phone  </label>
                                    <input type="text" name="phone" class="form-control" value=" @u.Phone "  style="width: 800px; height: 50px; margin-bottom: 30px; background-color: #3d1b69; color: white "/>

                                </div>
                                <div class="col-lg-6">
                                    <label style="font-size:20px ; font-weight:bold ; color:white">Addresse </label>
                                    <input type="text" name="addresse" class="form-control" value="@u.Address "  style="width: 800px; height: 50px; margin-bottom: 30px; background-color: #3d1b69; color: white " />

                                </div>

                            </div>
                            <div >

                                <div class="col-lg-6">
                                    <label for="Price" style="font-size:20px ; font-weight:bold ; color:white">Price (dhs) </label>
                                    <select name="paiement" class="custom-select " style="width: 800px; height: 50px; margin-bottom: 30px; background-color: #3d1b69; color: white; ">
                                        <option value="carte" selected>paiement par carte  </option>
                                        <option value="espece">paiement par espèce</option>
                                    </select>
                                </div>
                                <div class="col-lg-6">
                                    <label style="font-size:20px ; font-weight:bold ; color:white">Nbr de jour resevation </label>
                                    <input type="number" name="jours" class="form-control " style="width: 800px; height: 50px; margin-bottom: 30px; background-color: #3d1b69; color: white " />
                                </div>
                            </div>
                            <div >
                                <div class="col-lg-6">

                                    <label for="Name" style="font-size:20px ; font-weight:bold ; color:white">Date de resevation  </label>
                                    <div>
                                        <input name="date" type="date" class="form-control"  style="width: 800px; height: 50px; margin-bottom: 30px; background-color: #3d1b69; color: white "/>
                                    </div>

                                </div>
                                <div class="col-lg-2">
                                    <div>
                                        <input type="hidden" name="voitureId" value="@v.Id" style="width: 800px; height: 50px; background-color: #3d1b69; color: white " />
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="col-lg-12">
                                    <button type="submit" class="btn btn-red" style="margin-top:20px" >Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>

        </div>






    </div>
</div>

