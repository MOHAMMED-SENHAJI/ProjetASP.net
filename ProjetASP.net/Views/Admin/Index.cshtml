
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_dashboardAdmin.cshtml";
}

<div class="container Account_info">

    <div id="chartContainer" style="height: 370px; width: 100%; border-radius:20px;"></div>
    <div id="chartContainer2" style="height: 370px; width: 100%;"></div>

    <div class="row">
        <div class="col-7">

            <script type="text/javascript">
                window.onload = function () {

                var chart1 = new CanvasJS.Chart("chartContainer", {
                animationEnabled: true,
                theme: "dark2", // "light1", "light2", "dark1", "dark2"
                    title: {
                        text: "Reservations" + @ViewBag.nbrReservation,

                },
                subtitles: [{
                    text: "Nombre Total" + @ViewBag.nbrReservation,
                    fontSize: 16,                  
                }],
                axisY: {
                    title: "Nombre des réservatons",
                    logarithmic: false
                },
                data: [{
                    type: "column",
                    indexLabelFontColor: "white",
                    indexLabel: "{y}",
                    indexLabelFontSize: 16,
                    yValueFormatString: "#,##0.#",
                    toolTipContent: "<b>{label}: {y}</b> réservations",
                    dataPoints:  @Html.Raw(ViewBag.DataPoints1)
                }]
                });



var chart2 = new CanvasJS.Chart("chartContainer2", {
	theme: "light2", // "light1", "light2", "dark1", "dark2"
	exportEnabled: true,
	animationEnabled: true,
    title: {
        text:"Partition des utilisateurs",
		fontSize: 21
    },
    subtitles: [{
        text:"Nombre total: " + @ViewBag.nbrAllUser,
		fontSize: 16
        }],
	data: [{
		type: "pie",
		startAngle: 160,
		toolTipContent: "<b>{label}</b>: {y}",
		indexLabel: "{label} - {y}",
		dataPoints: @Html.Raw(ViewBag.DataPoints2)
	}]
});
chart1.render();
chart2.render();

}

            </script>
        </div>
    </div>
</div>


<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
<script src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>